client
dev tun
proto {{openvpn_proto}}
remote {{ cname|default(ansible_ec2_public_ipv4) }} {{openvpn_port}}
resolv-retry infinite
nobind

persist-key
persist-tun

ca ca.crt

{% if openvpn_2fa_google == 'yes' %}
auth-user-pass
{% else %}
cert {{item}}.crt
key {{item}}.key
tls-auth ta.key 1
cipher AES-256-CBC
remote-cert-tls server
{% endif %}

comp-lzo
verb 3
keepalive 10 120
reneg-sec 0
